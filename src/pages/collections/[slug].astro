---
import { getCollection, type CollectionEntry } from "astro:content";
import type { CollectionsSchema } from "../../content/config";
import CollectionLayout from "../../layouts/CollectionLayout.astro";

export async function getStaticPaths() {
  const postEntries = await getCollection("collections");
  return postEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

interface Props {
  entry: CollectionEntry<"collections">;
}

const { entry } = Astro.props;
const post: CollectionsSchema = entry.data;
const { Content } = await entry.render();

const allPhotos = await Astro.glob("../../assets/**/*.jpg");

// filter photos that have the entry slug in the path
const photos = allPhotos.filter((photo) => {
  const slug = entry.slug;
  return photo.default.src.includes(slug);
});
---

<CollectionLayout
  title={post.title}
  description={post.description}
  publishDate={post.publishDate}
  updatedDate={post.updatedDate}
  photos={photos}
>
  <Content />
</CollectionLayout>
