---
import { getCollection, type CollectionEntry } from "astro:content";
import type { CollectionsSchema } from "../../content/config";
import CollectionLayout from "../../layouts/CollectionLayout.astro";
import { getPhotoGlobal } from '../../utils/data.astro';

export async function getStaticPaths() {
  const postEntries = await getCollection("collections");
  return postEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

interface Props {
  entry: CollectionEntry<"collections">;
}

const { entry } = Astro.props;
const post: CollectionsSchema = entry.data;
const { Content } = await entry.render();

const photos = await getPhotoGlobal(entry.slug);

const featuredPhoto = await import(`../../content/collections/${entry.slug}/assets/${entry.data.coverImage}.jpg`);

---

<CollectionLayout
  title={post.title}
  tags={post.tags}
  description={post.description}
  publishDate={post.publishDate}
  updatedDate={post.updatedDate}
  socialImagePath={featuredPhoto.default.src}
  photos={photos}
>
  <Content />
</CollectionLayout>
