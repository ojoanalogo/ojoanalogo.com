export const getPhotoGlobal = async (slug: string) => {
  let photos: Record<string, any>[] = [];
  switch (slug) {
    case "tokyo-2023":
      photos = await Astro.glob("../../assets/tokyo-2023/*.jpg");
      break;
    case "ebisuhigashi-2023":
      photos = await Astro.glob("../../assets/ebisuhigashi-2023/*.jpg");
      break;
    case "kyoto-2023":
      photos = await Astro.glob("../../assets/kyoto-2023/*.jpg");
      break;
    case "narnia-2022":
      photos = await Astro.glob("../../assets/narnia-2022/*.jpg");
      break;
    case "narnia-2023":
      photos = await Astro.glob("../../assets/narnia-2023/*.jpg");
      break;
    case "osaka-2023":
      photos = (await Astro.glob("../../assets/osaka-2023/*.jpg")).reverse();
      break;
    case "venice-2023":
      photos = await Astro.glob("../../assets/venice-2023/*.jpg");
      break;
    case "mercado-culiacan-2023":
      photos = await Astro.glob("../../assets/mercado-culiacan-2023/*.jpg");
      break;
    case "sueños-pastel-2023":
      photos = await Astro.glob("../../assets/sueños-pastel-2023/*.jpg");
      break;
    case "guanajuato-2023":
      photos = (
        await Astro.glob("../../assets/guanajuato-2023/*.jpg")
      ).reverse();
      break;
    case "ukraine-rally-2022":
      photos = (
        await Astro.glob("../../assets/ukraine-rally-2022/*.jpg")
      ).reverse();
      break;
    case "newyork-2022":
      photos = (await Astro.glob("../../assets/newyork-2022/*.jpg")).reverse();
      break;
    case "liminal-spaces-2023":
      photos = await Astro.glob("../../assets/liminal-spaces-2023/*.jpg");
      break;
    case "revolucion-desfile-2023":
      photos = await Astro.glob(
        "../../assets/revolucion-desfile-2023/**/*.jpg"
      );
      break;
  }
  return photos;
};
