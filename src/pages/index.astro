---
import CarouselGallery from "../components/CarouselGallery.astro";
import { getFeaturedPhotos } from "../data/featured";
import BaseLayout from "../layouts/BaseLayout.astro";

const photos = getFeaturedPhotos();
---

<BaseLayout sideBarActiveItemID="home">
  <div class="flex-grow flex items-center justify-center py-4">
    <div class="w-full max-w-[95%] lg:max-w-[90%] xl:max-w-[85%] mx-auto">
      <CarouselGallery photos={photos} randomize={true} />
    </div>
  </div>
</BaseLayout>
