---
import { getCollection } from "astro:content";
import HorizontalCard from "../../components/HorizontalCard.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";

export async function getStaticPaths({ paginate }) {
  const posts = await getCollection("blog");
  posts.sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());

  const filteredPosts = posts.filter((post) => post.data.published);

  return paginate(filteredPosts, { pageSize: 5 });
}

const { page } = Astro.props;
---

<BaseLayout title="Blog" sideBarActiveItemID="blog">
  <div class="mb-5">
    <div class="text-3xl w-full font-bold">Blog</div>
  </div>

  {
    page.data.length === 0 ? (
      <div class="text-center">
        <h1 class="text-9xl font-bold mb-4">🏜️</h1>
        <h1 class="text-9xl font-bold mb-4 text-primary">404</h1>
        <h3 class="text-2xl">
          No hay publicaciones disponibles, regresa mañana
        </h3>
      </div>
    ) : (
      <ul>
        {page.data.map(async (post) => (
          <HorizontalCard
            title={post.data.title}
            img={post.data.heroImage}
            desc={post.data.description}
            url={"/blog/" + post.slug}
            slug={post.slug}
            target="_self"
            badge={post.data.badge}
          />
        ))}
      </ul>
    )
  }

  <div class="flex justify-between">
    {
      page.url.prev ? (
        <a href={page.url.prev} class="btn btn-ghost my-10 mx-5">
          {" "}
          <svg
            class="h-6 w-6 fill-current md:h-8 md:w-8"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
          >
            <path d="M15.41,16.58L10.83,12L15.41,7.41L14,6L8,12L14,18L15.41,16.58Z" />
          </svg>{" "}
          Publicaciones más recientes
        </a>
      ) : (
        <div />
      )
    }
    {
      page.url.next ? (
        <a href={page.url.next} class="btn btn-ghost my-10 mx-5">
          Publicaciones anteriores{" "}
          <svg
            class="h-6 w-6 fill-current md:h-8 md:w-8"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
          >
            {" "}
            <path d="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z" />
          </svg>
        </a>
      ) : (
        <div />
      )
    }
  </div>
</BaseLayout>
