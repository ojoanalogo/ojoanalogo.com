---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

import { SITE_DESCRIPTION, SITE_TITLE } from "../config";

const {
  socialImagePath,
  title = SITE_TITLE,
  description = SITE_DESCRIPTION,
  navbarActiveItemID,
} = Astro.props;
---

<!doctype html>
<html
  lang="es"
  class="bg-beige-50 text-neutral-800 selection:bg-beige-200 selection:text-neutral-900 h-full"
>
  <head>
    <BaseHead
      title={title}
      description={description}
      socialImagePath={socialImagePath}
    />
  </head>
  <body
    class="w-full font-body font-light tracking-wide min-h-screen flex flex-col"
  >
    <Header title={SITE_TITLE} navbarActiveItemID={navbarActiveItemID} />
    <main id="main" class="px-4 md:px-8 pb-0 flex-1 flex flex-col">
      <slot />
    </main>
    <Footer />
  </body>
</html>
