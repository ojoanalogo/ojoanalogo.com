---
const { sideBarActiveItemID } = Astro.props;
const activeClass = "bg-base-300"; // For primary color replace with `active` class

const collections: Array<{
  title: string;
  id: string;
  url: string;
  new?: boolean;
}> = [
  {
    id: "narnia-2023",
    title: "Narnia",
    url: "/narnia-2023",
    new: true,
  },
];
---

<ul class="menu grow shrink menu-md overflow-y-auto">
  <li><a class="py-3 text-sm mt-3" id="home" href="/">Inicio</a></li>
  <li><a class="py-3 text-sm mt-3" id="collections" href="/collections">Galería</a></li>
  <li>
    <a class="py-3 text-sm mt-3" id="about" href="/about">Sobre mí</a>
  </li>
</ul>

<script
  define:vars={{
    sideBarActiveItemID,
    activeClass,
  }}
>
  const activeItemElem = document.getElementById(sideBarActiveItemID);
  activeItemElem.classList.add(activeClass);
</script>
