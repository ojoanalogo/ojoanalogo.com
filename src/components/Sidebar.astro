---
import { Picture } from "@astrojs/image/components";
import ojo from "../assets/ojoanalogo.jpg";
import SideBarFooter from "./SidebarFooter.astro";
import SideBarMenu from "./SidebarMenu.astro";
const { sideBarActiveItemID, keepCollectionsDropdown } = Astro.props;
---

<div class="drawer-side z-40">
  <label for="my-drawer" class="drawer-overlay"></label>
  <aside
    class="px-2 pt-2 h-auto min-h-full w-[14rem] bg-base-200 text-base-content flex flex-col"
  >
    <div class="m-auto">
      <div class="w-fit mx-auto mt-5 mb-2">
        <div
          class="avatar transition ease-in-out hover:scale-[102%] flex items-center justify-center">
          <div class="w-[4.5rem]">
            <a target="_blank" href="https://threads.net/@ojo.analogo">
              <Picture
              class="mask mask-circle"
              src={ojo}
              widths={[400]}
              alt="Profile image`"
            />
            </a>
          </div>
        </div>
        <p class="font-bold text-2xl mt-2">Alfonso Reyes</p>
      </div>
      <SideBarMenu
        sideBarActiveItemID={sideBarActiveItemID}
        keepCollectionsDropdown={keepCollectionsDropdown}
      />
      <SideBarFooter />
    </div>
  </aside>
</div>
